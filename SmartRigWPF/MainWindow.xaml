<Window x:Class="SmartRigWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartRig"
        Height="600"
        Width="800"
        Background="#F5F6FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Background="#6460D5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT NAV -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0">
                <Image Source="/Images/Mundo.png" Width="128" Height="64" VerticalAlignment="Center"/>

                <Button Content="Home"
                        Width="80"
                        Height="32"
                        Click="HomePage_Click"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="White"
                        Margin="0,0,10,0"/>
            </StackPanel>

            <!-- TITLE -->
            <Label Grid.Column="1"
                   Content="SmartRig | Admin"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

            <!-- RIGHT ACTION -->
            <Button Grid.Column="2"
                    Content="Login"
                    Width="80"
                    Height="32"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Click="Login_Click"
                    Background="White"
                    Foreground="#6460D5"
                    BorderThickness="0"/>
        </Grid>

        <!-- CONTENT AREA -->
        <Border Grid.Row="1"
                Margin="15"
                Background="White"
                CornerRadius="8"
                Padding="10">

            <Frame x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   Background="White"
                   Navigated="ContentFrame_Navigated"/>
        </Border>

    </Grid>
</Window>
