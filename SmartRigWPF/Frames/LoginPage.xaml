<UserControl x:Class="SmartRigWPF.Frames.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F4F6F8">

    <!-- Grid handles centering -->
    <Grid>

        <!-- Login Card -->
        <Border Width="360"
                Height="320"
                Background="White"
                CornerRadius="10"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <!-- Canvas used internally -->
            <Canvas>

                <!-- Title -->
                <TextBlock Text="Login"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Canvas.Left="140"
                           Canvas.Top="20"/>

                <!-- Email -->
                <TextBlock Text="Email"
                           FontSize="14"
                           Foreground="#666"
                           Canvas.Left="40"
                           Canvas.Top="80"/>

                <TextBox x:Name="EmailTextBox"
                         Width="280"
                         Height="36"
                         FontSize="14"
                         Padding="8"
                         Canvas.Left="40"
                         Canvas.Top="105"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="14"
                           Foreground="#666"
                           Canvas.Left="40"
                           Canvas.Top="155"/>

                <PasswordBox x:Name="PasswordBox"
                             Width="280"
                             Height="36"
                             FontSize="14"
                             Padding="8"
                             Canvas.Left="40"
                             Canvas.Top="180"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Width="280"
                        Height="40"
                        FontSize="14"
                        Background="#6460D5"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Canvas.Left="40"
                        Canvas.Top="235"
                        Click="Button_Click_2"/>

            </Canvas>
        </Border>

    </Grid>
</UserControl>
