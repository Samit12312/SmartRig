@using Models;
@model RegistrationViewModel
@{
    ViewData["Title"] = "ViewRegistrationForm";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<link href="~/stylesheet/register-login.css" rel="stylesheet" />
<div class="register-container">
    <h2>Register</h2>
    <form asp-controller="Guest" asp-action="Registrations">
        <ul>
            <li>
                <label>Full Name</label>
                <input id="UserName" asp-for="User.UserName" placeholder="Full Name" required />
                <span id="UserNameError" asp-validation-for="User.UserName" class="error-message"></span>
            </li>

            <li>
                <label>Email</label>
                <input id="UserEmail" asp-for="User.UserEmail" type="email" placeholder="Email" required />
                <span id="UserEmailError" asp-validation-for="User.UserEmail" class="error-message"></span>
            </li>

            <li>
                <label>Password</label>
                <input id="UserPassword" asp-for="User.UserPassword" type="password" placeholder="Password" required />
                <span id="UserPasswordError" asp-validation-for="User.UserPassword" class="error-message"></span>
            </li>

            <li>
                <label>Address</label>
                <input id="UserAddress" asp-for="User.UserAddress" placeholder="Address" required />
                <span id="UserAddressError" asp-validation-for="User.UserAddress" class="error-message"></span>
            </li>

            <li>
                <label>City</label>
                <select id="CityId" asp-for="User.CityId" required>
                    <option value="">Select City</option>
                    @foreach (Cities cities in Model.Cities)
                    {
                        <option value="@cities.CityId">@cities.CityName</option>
                    }
                </select>
                <span id="CityIdError" asp-validation-for="User.CityId" class="error-message"></span>
            </li>

            <li>
                <label>Phone Number</label>
                <input id="UserPhoneNumber" asp-for="User.UserPhoneNumber" placeholder="Phone Number" required />
                <span id="UserPhoneNumberError" asp-validation-for="User.UserPhoneNumber" class="error-message"></span>
            </li>

            <li>
                <button id="RegisterButton" type="submit">Register</button>
            </li>
        </ul>

    </form>
</div>
